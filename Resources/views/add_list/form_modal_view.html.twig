<div class="modal-header">
    <h4 class="modal-title">{{ crud_def.label }}</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    {% block form_view %}
        <div id="form-content">
            {{ render(controller('Appkweb\\Bundle\\EasyCrudBundle\\Controller\\CrudController::getFormView',{'classname': crud_def.className,'parent_classname': parent_classname,'allow_add_list':false})) }}
        </div>
    {% endblock %}
</div>
<div class="modal-footer">
    <button form="{{ crud_def.className ~ '-form' }}" type="submit" class="btn btn-success"><span
                class="fa fa-save"></span> Enregistrer
    </button>
    <button type="button" class="btn btn-danger" data-dismiss="modal"><span
                class="fa fa-window-close"></span> Annuler
    </button>
</div>
